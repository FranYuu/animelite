<UserControl x:Class="AnimElite.ErrorHandling"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnimElite"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="Gainsboro">
        <TextBlock TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Foreground="Red" FontSize="52">Une erreur est survenue, le site est en maintenance ou une connexion au serveur n'a pas pu être établie. Vérifiez votre connexion au réseau ou veuillez patienter. Les développeurs travaillent (pas) sur cette issue</TextBlock>
    </Grid> 
</UserControl>
